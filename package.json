{
  "private": true,
  "workspaces": [
    "packages/@postdfm/*",
    "packages/postdfm"
  ],
  "description": "Provides an API for easily transforming Delphi Forms",
  "scripts": {
    "ci": "yarn install --frozen-lockfile && yarn run bootstrap && yarn run compile && yarn run lint:check && yarn run format:check && yarn test",
    "list": "lerna ls --json",
    "bootstrap": "lerna bootstrap --force-local",
    "eslint": "eslint --ignore-path .gitignore \"**/*.js\"",
    "tslint": "tslint \"**/*.ts\"",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{js,json,ts,yml,md}\"",
    "lint:fix": "yarn eslint --fix && yarn tslint --fix",
    "lint:check": "yarn eslint && yarn tslint",
    "format:fix": "yarn prettier --write --list-different",
    "format:check": "yarn prettier --check",
    "compile": "lerna run compile",
    "test": "jest --coverage",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.0.0",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/jest": "^24.0.11",
    "@types/nearley": "^2.11.0",
    "@types/node": "^12.0.0",
    "commitlint": "^8.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-node": "^9.0.0",
    "execa": "^2.0.0",
    "husky": "^3.0.0",
    "jest": "^24.4.0",
    "jest-junit": "^6.3.0",
    "lerna": "^3.13.1",
    "lint-staged": "^9.0.0",
    "nearley": "^2.16.0",
    "prettier": "^1.16.4",
    "read-pkg": "^5.0.0",
    "semantic-release": "^15.13.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333",
    "write-pkg": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "files": [],
  "lint-staged": {
    "*.{json,yml,md}": [
      "prettier --ignore-path .gitignore --write",
      "git add"
    ],
    "*.js": [
      "eslint --ignore-path .gitignore",
      "prettier --ignore-path .gitignore --write",
      "git add"
    ],
    "*.ts": [
      "tslint",
      "prettier --ignore-path .gitignore --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=7.6.0"
  }
}
