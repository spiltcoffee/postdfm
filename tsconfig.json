{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["**/*"]
}
